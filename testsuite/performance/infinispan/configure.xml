<project name="keycloak-server-configuration" basedir="." >

    <target name="check-configuration-state">
        <available property="configured" file="${infinispan.server.home}/../configured"/>
        <available property="management.configured" file="${infinispan.server.home}/../management-configured"/>
        <echo>configured: ${configured}</echo>
        <echo>management.configured: ${management.configured}</echo>
    </target>       
    
    <target name="configure-infinispan" unless="configured" depends="check-configuration-state">
        <chmod perm="ug+x">
            <fileset dir="${infinispan.server.home}/bin">
                <include name="*.sh"/>
            </fileset>
        </chmod>
        <copy todir="${infinispan.server.home}/bin" >
            <fileset dir="${scripts.dir}/jboss-cli"/>
            <filterset>
                <filter token="LOCAL_SITE" value="${local.site}"/>
                <filter token="REMOTE_SITE" value="${remote.site}"/>
            </filterset>
        </copy>
        <exec executable="./${jboss.cli.script}" dir="${infinispan.server.home}/bin" failonerror="true">
            <arg value="--file=add-keycloak-caches.cli"/>
        </exec>
        <exec executable="./${jboss.cli.script}" dir="${infinispan.server.home}/bin" failonerror="true">
            <arg value="--file=add-private-network-interface.cli"/>
        </exec>
        <delete dir="${infinispan.server.home}/standalone/configuration/standalone_xml_history"/>
        <delete dir="${infinispan.server.home}/standalone/log"/>
        <delete dir="${infinispan.server.home}/standalone/data"/>
        <delete dir="${infinispan.server.home}/standalone/tmp"/>
        <touch file="${infinispan.server.home}/../configured"/>
    </target>

    <target name="add-management-user" unless="management.configured" depends="check-configuration-state">
        <echo>Adding management user: `${management.user}`</echo>
        <exec executable="./${add.user.script}" dir="${infinispan.server.home}/bin" failonerror="true">
            <arg value="-u"/>
            <arg value="${management.user}"/>
            <arg value="-p"/>
            <arg value="${management.user.password}"/>
        </exec>
        <touch file="${infinispan.server.home}/../management-configured"/>
    </target>
    
    <target name="prepare-docker-config">
        <copy todir="${infinispan.server.home}/../docker" overwrite="false">
            <fileset dir="${scripts.dir}">
                <include name="Dockerfile"/>
                <include name="*.sh"/>
            </fileset>
        </copy>
        <copy todir="${infinispan.server.home}/../docker/infinispan-server" overwrite="false">
            <fileset dir="${infinispan.server.home}">
                <exclude name="bin/*.cli"/>
            </fileset>
        </copy>
    </target>

</project>
